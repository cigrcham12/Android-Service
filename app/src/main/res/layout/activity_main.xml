<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity.MainActivity">


    <Button
        android:onClick="startForegroundService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foreground Service"/>


    <Button
        android:onClick="startExtendClassBinder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extend Class Binder"/>

    <Button
        android:onClick="startMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"/>
    <Button
        android:onClick="startForeGoundAndBoundSevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foreground and Bound Service"/>





</LinearLayout>